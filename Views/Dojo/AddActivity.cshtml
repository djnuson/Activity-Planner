@using DojoActivity.Models
@model ActivityModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <style>
        #timepicker:before{
            content:'Time:';
            margin-right:.6em;
            color:#9d9d9d;
        }
    </style>
    <title>@ViewBag.Title
        @{
            ViewBag.Title = "Add an Activity!";
        }
    </title>
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-sm-6 col-md-4 col-md-offset-4">
                <h1 style="text-align: center;"><strong>Dojo Activity Center</strong></h1>
                <p style="text-align: center;"><a href="/dashboard" class="btn btn-success">Home</a> <a href="/logout" class="btn btn-danger">Log Out</a></p>
                <hr>
                <h2 class="text-center login-title">Create an Activity!</h2>
                <div class="account-wall">
                    <img class="profile-img" src="~/images/ninja.png">
                <!-- FORM -->
                    <form class="form-signin" asp-action="CreateProcess" asp-controller="Dojo" method="post">
                        <!-- title -->
                    <input type="text" class="form-control" asp-for="Title" placeholder="Title">
                        <span style = "color: red;" asp-validation-for="Title"></span><br>
                        <!-- time -->
                    <input type="time" class="form-control" asp-for="Time" placeholder="Time" id="timepicker">
                        <span style = "color: red;" asp-validation-for="Time"></span><br>
                        <!-- date -->
                    <input type="date" class="form-control" asp-for="Date" placeholder="Date">
                        <span style = "color: red;" asp-validation-for="Date"></span><br>
                        <!-- duration -->
                    <input type="text" class="form-control" asp-for="Duration" placeholder="Duration" id="Duration">
                    <select asp-for="TimeForm" id="TimeForm" class="form-control">
                        <option selected="selected" selected disabled hidden>Days? Hours? Minutes?</option>
                        <option value="Days">Days</option>
                        <option value="Hours">Hours</option>
                        <option value="Minutes">Minutes</option>
                    </select>
                        <span style = "color: red;" asp-validation-for="Duration"></span><br>
                        <!-- description -->
                    <textarea type="text" class="form-control" asp-for="Description" placeholder="Description"></textarea>
                        <span style = "color: red;" asp-validation-for="Description"></span><br>
                        <!-- pass the usei id as hidden for creator of activity -->
                        <input type="hidden" asp-for="UserId" value="@ViewBag.UserID">
                    <button class="btn btn-lg btn-primary btn-block" type="submit">Create Activity</button>
                    
                    </form>
                <!-- FORM END -->
                </div>
            </div>
        </div>
    </div>
</body>
</html>